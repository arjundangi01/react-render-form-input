{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "jsx": "react-jsx",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
			 "@/*": ["./src/*"],
       "@components/*": ["./src/components/*"]
		},
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  